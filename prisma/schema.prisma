// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String     @id @default(cuid())
  name       String?
  email      String?    @unique
  password   String?
  businesses Business[]
}

model Business {
  id        String   @id @default(cuid())
  name      String?
  createdAt DateTime @default(now())
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
